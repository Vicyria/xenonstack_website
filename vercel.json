{
    "functions": {
      "api/*": {
        "runtime": "vercel-python@0.24.0",
        "memory": 1024
      }
    },
    "routes": [
      { "src": "/api/(.*)", "dest": "api/$1" },
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/(.*)", "dest": "api/index.py" }
    ],
    "env": {
      "FLASK_ENV": "production",
      "FLASK_APP": "api/index.py"
    },
    "builds":[ {
      "src": "api",
      "use": "@vercel/static-build"
    }]
  }
  